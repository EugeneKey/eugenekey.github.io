.tags
		margin-top rem(30px)
		a
				font-size rem(14px)
				color main
				display inline-block
				border 1px solid main
				border-radius rem(5px)
				padding rem(4px) rem(10px)
				margin-right rem(2px)
				margin-bottom rem(8px)
				text-decoration none
				&:hover
						color hover
						border 1px solid hover

.img-rounded
		border-radius 50%

.aboutme
		.recent
				list-style none
		.project
			padding-bottom 60px
			div
				margin 10px 0
				padding 0
				div
					padding-left 60px
					line-height 2
		h3
			margin-bottom 7px
			position relative
			text-align right
			color solCyan
			&:after
				content "|>"
				font-weight 100
				color black
				position absolute
				right -12px
				transition all .2s
			&:hover
				color solBlue
				text-decoration underline
				&:after
					transform translateX(10px)
		.desc
			text-align justify

		.label-name
				font-weight bold
				font-size rem(16px)
				padding 9px
				padding-left 60px
				margin-bottom 0px
		.labels
			background-color solBase02
			display inline
			padding .2em .6em .3em
			font-size rem(12px)
			font-weight bold
			line-height 1
			color solBase3
			text-align center
			white-space nowrap
			vertical-align baseline
			border-radius .25em
			margin .2em
		.backend
			.label-name
				background no-repeat url(../img/project/back.png)
				background-size 24px
				background-position 8px
			.labels
				background-color solGreen
		.frontend
			.label-name
				background no-repeat url(../img/project/front.png)
				background-size 40px
				background-position-y 6px
			.labels
				background-color solBlue
		.gem
			.label-name
				background no-repeat url(../img/project/gem.png)
				background-size 35px
				background-position 5px
			.labels
				background-color ruby
		.package
			.label-name
				background no-repeat url(../img/project/npm.svg)
				background-size 40px
				background-position 0px
			.labels
				background-color ruby

		.tech
			h4
				margin-bottom 10px
				padding-left 20px
			.tech-labels
				padding-left 40px
				li
					font-size rem(18px)
					list-style-type none
					font-weight 400
					text-indent -24px
					margin-left 24px
					&:before
						content "[‚óè]"
						color solGreen
						left -32px
						position relative