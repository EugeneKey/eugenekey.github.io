.page_posts
    .tree-posts
        display block
        width 100%
    #search
       background transparent
       svg
           background-color transparent
.tree-posts
    padding-top: 43px
    width 347px
    height 100%
    position fixed
    background-color main
    overflow-y auto
    top 0
    +below(rem(1200px))
        display none

    h3
        color solOrange
        position relative
        margin rem(10px) 0
        &:before
            content ""
            width 100px
            height 4px
            position absolute
            bottom 0
            background-color solOrange
.post-item
    text-align left
    padding rem(5px) rem(20px)
    position relative
    .content
        cf();
        +below(cut)
            text-align center
            stack()
        a
            text-transform lowercase
            +above(cut)
                col(4.2/6)
            text-decoration none
            border none
        .date
            color main
        .post-title
            color solCyan
            position relative
            padding 0
            font-size rem(16px)
            margin 0
            text-align center
            &.selected
                background main
            &:hover
                color solBlue
                background-color transparent
            +above(cut)
                text-align left
                margin-left rem(-10px)
                display initial
                font-size rem(17px)
                text-decoration none